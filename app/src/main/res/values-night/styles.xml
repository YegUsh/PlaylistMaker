<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainScreenButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black_200</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsScreenTextStyle">
        <item name="android:textColor">@color/text_settings</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:layout_marginBottom">21dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">8</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="SettingsScreenButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:backgroundTint">@color/white_settings</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/gray</item>
    </style>

    <style name="SearchDayNightStyle">
        <item name="android:textColor">@color/white</item>
        <item name="navigationIcon">@drawable/ic_back_night</item>
    </style>

    <style name="SettingsActivityFrameLayoutPaddingStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/settings_margin_start_frame</item>
        <item name="android:paddingTop">@dimen/settings_paddings_frame</item>
        <item name="android:paddingEnd">@dimen/settings_paddings_frame</item>
        <item name="android:paddingBottom">@dimen/settings_paddings_frame</item>
    </style>

    <style name="SearchActivityTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/search_day_night_color</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchButtons">
        <item name="cornerRadius">54dp</item>

        <item name="android:backgroundTint">@color/search_day_night_color</item>
    </style>

    <style name="MpTexts">
        <item name="android:textColor">@color/mp_text_color_lesser</item>
        <item name="android:textSize">@dimen/mp_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>


</resources>